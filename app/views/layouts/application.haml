          .nav-collapse
            %ul.nav
            %ul.nav.pull-right
              %li
                - if current_user
                  = link_to 'Sign Out', '/sign_out'
                - else
                  = link_to 'Sign In', '/sign_in'

    .container
      .row
        .span4.logo{:style => "background-image:url(/Logo.jpeg); display:inline; height:200px; margin-left: -100px;"}
        .span4
          = render_partial 'celebrities/recent_deaths'
        - if current_user
          = render_partial 'parties/form'
      %hr
      .row
        .span8
          %h1 Dead celebs
          = yield
        
      %hr
        %footer
          %p
